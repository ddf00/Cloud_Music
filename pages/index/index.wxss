.indexContainer .navSwiper {
  width: 100%;
  height: 300rpx;
}

.indexContainer .navSwiper image {
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
  justify-content: space-around;
}
.navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  color: #fff;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 28rpx;
}
/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}
.navScroll {
  display: flex; /*需要给scroll-view设置enable-flex属性 flex才能生效*/
  margin-top: 20rpx;
  height: 300rpx;
}

.navScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.navScroll .scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
}
.navScroll .scrollItem text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical; /*设置内部子元素的对其方式*/
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
  padding: 0 20px;
}

.topListSwiper{
  height: 450rpx;
}

.swiperItem {
  background-color: #fbfbfb;
  height: 100%;
  width: 96%;
}
.swiperItem .title {
  font-size: 32rpx;
  line-height: 80rpx;
}
.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem .musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
}


