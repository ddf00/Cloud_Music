.wrapper {
    position: relative;
    z-index: 9;
    padding-bottom: 40rpx;
}

.wrapper .left-top-sign {
    font-size: 120rpx;
    color: #f8f8f8;
    position: relative;
    left: -16rpx;
}
.wrapper .welocme {
    font-size: 46rpx;
    position: relative;
    left: 50rpx;
    top: -90rpx;
    color: #555;
}
.inputContainer {
    padding: 0 60rpx;
}

.inputContainer .input-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 30rpx;
    height: 120rpx;
    background-color: #f8f6fc;
    margin-bottom: 50rpx;
    border-radius: 4px;
}

.input-item .title {
    height: 50rpx;
    line-height: 56rpx;
    color: #606266;
    font-size: 30rpx;
}

.input-item input {
    height: 60rpx;
    font-size: 30rpx;
    color: #303133;
}

.confirm-btn {
    width: 630rpx !important;
    height: 76rpx;
    margin-top: 70rpx;
    background-color: #d43c33;
    color: #fff;
    border-radius: 50rpx;
    font-size: 32rpx;
    font-weight: normal;
}
.forget-section {
    font-size: 30rpx;
    color: #4399fc;
    text-align: center;
    margin-top: 40rpx;
}
.register-section {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 50rpx;
    text-align: center;
    font-size: 30rpx;
}

.register-section text {
    color: #4399fc;
}