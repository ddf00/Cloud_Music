.recommendContainer .header {
    width: 100%;
    height: 300rpx;
    background-color: skyblue;
    position: relative;
}

.recommendContainer .header image {
    width: 100%;
    height: 100%;
}

.header .date {
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%);
}


/* 内容区 */

.recommendList {
    position: relative;
    top: -30rpx;
    border-radius: 30rpx;
    padding: 0 20rpx;
    background-color: #fff;
}

.recommendList .allChange {
    float: right;
}


